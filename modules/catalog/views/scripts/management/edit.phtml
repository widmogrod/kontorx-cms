var form_type = null;
function setFormType(type) {form_type = type;}
function getFormType() {return form_type;}

$(function() {
	$("#zf-tabs > ul").tabs();
	
	// statyczne tab, zmieniaja typ formularza
	$('a[href^=#fieldset]').click(function(){
		setFormType(null);
	});
	
	var form_edit = $('.form_edit');
	
	$('.action-save').click(function(){
		var type = getFormType();

		if (type == null) {
			form_edit.submit();
		} else
		if (type == 'service') {
			var form = $('.form_service');
			$.ajax({
				'url': form.attr('action'),
				'data': form.serialize(),
				'type':'post',
				'dataType':'html',
				'success': function(response) {
					form.parent().html(response);
				}
			});
		}

		return false;
	});
});
