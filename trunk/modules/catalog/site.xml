<?xml version="1.0" encoding="UTF-8"?>
<config>
    <form>
        <add>
            <elementPrefixPath>
                <filter>
                    <KontorX_Filter_Word_>KontorX/Filter/Word
                    </KontorX_Filter_File_>
                </filter>
                <validate>
                    <KontorX_Validate_>KontorX/Validate
                    </KontorX_Filter_File_>
                </validate>
            </elementPrefixPath>

            <elements>
                <url type="file">
                    <options label="Url" required="1">
                        <filters>
                            <stringTrim filter="StringTrim"/>
                            <stringToLower filter="StringToLower"/>
                            <rewrite filter="Rewrite" />
                        </filters>
                        <validators>
                            <dbtable validator="DbTable">
                                <options table="CatalogSite" where="url = ?"></options>
                            </dbtable>
                        </validators>
                    </options>
                </url>
            </elements>
        </add>
        <edit>
            <elementPrefixPath>
                <filter>
                    <KontorX_Filter_Word_>KontorX/Filter/Word
                    </KontorX_Filter_File_>
                </filter>
                <validate>
                    <KontorX_Validate_>KontorX/Validate
                    </KontorX_Filter_File_>
                </validate>
            </elementPrefixPath>

            <elements>
                <url type="file">
                    <options label="Url" required="1">
                        <filters>
                            <stringTrim filter="StringTrim"/>
                            <stringToLower filter="StringToLower"/>
                            <rewrite filter="Rewrite" />
                        </filters>
                        <validators>
                            <dbtable validator="DbTable">
                                <options table="CatalogSite" where="url = ?"></options>
                            </dbtable>
                        </validators>
                    </options>
                </url>
            </elements>
        </edit>
    </form>

    <dataGridColumns>
        <id type="Text" name="Id." />
        <fullname type="Url" filter="Text" name="Personel">
            <href>/catalog/site/list</href>
            <row type="Html">
                <content><![CDATA[<a title="Personel" class="action edit small" href="/catalog/site/edit/catalog_id/{catalog_id}/id/{id}" onclick="return !window.open('/catalog/site/edit/format/body/catalog_id/{catalog_id}/id/{id}','Edytuj', 'width=800px,height=700px,menubar=no,location=no,resizable=yes,scrollbars=yes,status=yes,left=50%');">{url}</a>]]>
                </content>
            </row>
        </fullname>
        <catalog_id type="Order" filter="Text" name="Wizytówka">
            <href>/catalog/site/list</href>
            <row type="Html">
                <content><![CDATA[<a title="Edytuj wizytówkę" class="action edit small" href="/catalog/catalog/edit/id/{catalog_id}" onclick="return !window.open('/catalog/catalog/edit/format/body/id/{catalog_id}','Edytuj', 'width=800px,height=700px,menubar=no,location=no,resizable=yes,scrollbars=yes,status=yes,left=50%');">{catalog_name}</a>]]>
                </content>
            </row>
        </catalog_id>
        <edit class="span-2">
            <name><![CDATA[<input type="Submit" value="Filtruj" />]]>
            </name>
            <row type="Html">
                <content><![CDATA[<a title="Edytuj" class="action edit small" href="/catalog/site/edit/catalog_id/{catalog_id}/id/{id}" onclick="return !window.open('/catalog/site/edit/format/body/catalog_id/{catalog_id}/id/{id}','Edytuj', 'width=800px,height=700px,menubar=no,location=no,resizable=yes,scrollbars=yes,status=yes,left=50%');">edytuj</a>]]>
                </content>
            </row>
        </edit>
        <delete class="span-1">
            <row type="Html">
                <content><![CDATA[<a title="Usuń" onclick="return confirm('Czy usunąć rekord?');" class="action trash ico small" href="/catalog/site/delete/catalog_id/{catalog_id}/id/{id}">usuń</a>]]>
                </content>
            </row>
        </delete>
    </dataGridColumns>
</config>